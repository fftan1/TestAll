{
    "env": {
      "node": true,
      "browser": false,
      "es6": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "radix": "off",
      "max-len": "off",
      "camelcase": "off",
      "no-bitwise": "off",
      "no-plusplus": "off",
      "arrow-body-style": "off",
      "object-curly-newline": "off",
      "import/no-extraneous-dependencies": "off",
      "prefer-destructuring": [
        "error",
        {
          "array": false,
          "object": true
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prefer-stateless-function": 0
    }
  }